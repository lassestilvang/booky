{
  "name": "booky-extension",
  "version": "1.0.0",
  "description": "Browser extension for Booky",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^23.0.0",
    "ts-jest": "^29.4.4"
  },
  "jest": {
    "rootDir": "../",
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageDirectory": "extension/coverage",
    "coverageReporters": ["text", "html", "json", "lcov"],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "tests",
      "dist",
      "coverage"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/extension/tests/setup.js"
    ],
    "reporters": [
      "default"
    ]
  }
}
