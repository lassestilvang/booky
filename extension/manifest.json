{
  "manifest_version": 3,
  "name": "Booky Extension",
  "version": "1.0",
  "description": "A Chrome extension for Booky",
  "permissions": ["activeTab", "storage", "scripting", "identity"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
